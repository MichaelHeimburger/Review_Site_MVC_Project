<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <img id="bgimg" src="~/Images/skyline1.png" /><!--BACGROUND IMAGE-->
    <img id="logo" src="~/Images/travelcitylogo.png" /><!--TOP LOGO-->

    <nav class="navbar navbar-expand-md navbar-dark">
        <!-- Brand -->
        <p class="navbar-brand">
        </p>

        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav" >
                <li  class="nav-item" id="navitem">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="nav-item " id="navitem">
                    @Html.ActionLink("Lorem", "Index", "Home")
                </li>
                <li class="nav-item" id="navitem">
                    @Html.ActionLink("Ipsum", "Index", "Home")
                </li>
                <li class="nav-item" id="navitem">
                    @Html.ActionLink("Reviews", "Index", "Home")
                </li>
            </ul>
        </div>
    </nav> <!-- from here up is the navbar header-->
    <div class="container-fluid body-content" id="allcontent">
        @RenderBody()
       
        <footer>
            <p>&copy; @DateTime.Now.Year - TravelCityReviews <br/> Made By Michael Heimburger</p>
            <a  href="https://michaelheimburger.github.io/" > <img src="~/Images/mhlogo.png" id="mhlogo" /> </a>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
